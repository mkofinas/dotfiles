[core]
  editor=nvim
  pager = diff-so-fancy | less --tabs=4 -i -R -z-4

[color]
  ui = true

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22

[log]
  decorate = full

[push]
  default = tracking

[alias]
  tree = log --oneline --graph --all
  diffw = diff --word-diff
